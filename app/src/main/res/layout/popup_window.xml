<?xml version="1.0" encoding="utf-8"?>
<com.levaniphoenix.app.ResizableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/resize"
    android:layout_width="wrap_content"
    android:layout_height="200dp"
    android:animateLayoutChanges="true"
    android:background="@null"
    android:alpha="1">

    <RelativeLayout
        android:id="@+id/border"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="1"
        android:background="@drawable/bg_transparent_border_0_nil_default"
        />

    <com.levaniphoenix.app.Views.ResizeView
        android:id="@+id/resize_view"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:background="@null" />
</com.levaniphoenix.app.ResizableLayout>